# Gelişmiş Sigma Karşılaştırıcı Konfigürasyonu

# Ollama API Ayarları
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=mistral

# MongoDB Ayarları
MONGO_URI=mongodb://localhost:27017/
DB_NAME=sigmaDB
COLLECTION_NAME=rules

# Performance Ayarları
MAX_WORKERS=4
RULE_LIMIT=20

# Benzerlik Skoru Ağırlıkları (0.0-1.0)
STRUCTURAL_WEIGHT=0.6
SEMANTIC_WEIGHT=0.4

# Timeout Ayarları (saniye)
API_TIMEOUT=300
CONNECTION_TIMEOUT=30

# Output Ayarları
SAVE_RESULTS=true
OUTPUT_FORMAT=json
LOG_LEVEL=INFO